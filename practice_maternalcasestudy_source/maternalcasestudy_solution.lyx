\[
\frac{\partial Z}{\partial B}=\frac{56-3B}{5(672-6B)^{\frac{2}{3}}(168+B)^{\frac{1}{3}}}=0
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
B=\frac{56}{3}.
\]

\end_inset


\end_layout

